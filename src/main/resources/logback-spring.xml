<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
    <!--引用默认日志配置-->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <!--使用默认的控制台日志输出实现-->
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <!--应用名称-->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="springBoot"/>
    <!--日志文件保存路径-->
    <springProperty scope="context" name="LOG_PATH" source="logging.path" defaultValue="/var/log"/>

    <!-- 文件输出 -->
    <property name="LOG_FILE_PATH" value="${LOG_PATH:-${java.io.tmpdir:-/tmp}}/${APP_NAME:-.}/application.log"/>
    <appender name="LOG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE_PATH}</file>
        <encoder>
            <!--设置为默认的文件日志格式-->
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 日志文件名格式 -->
            <fileNamePattern>${LOG_PATH:-${java.io.tmpdir:-/tmp}}/archive/application.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- 保留的历史日志文件数量 -->
            <maxHistory>30</maxHistory>
            <!-- 单个日志文件的最大大小 -->
            <maxFileSize>10MB</maxFileSize>
            <!-- 总日志文件的最大大小 -->
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 异常日志文件输出 -->
    <property name="ERROR_FILE_PATH" value="${LOG_PATH:-${java.io.tmpdir:-/tmp}}/${APP_NAME:-.}/error.log"/>
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${ERROR_FILE_PATH}</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <!--设置为默认的文件日志格式-->
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH:-${java.io.tmpdir:-/tmp}}/${APP_NAME:-.}/archive/error.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <maxFileSize>10MB</maxFileSize>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 单独配置特定包的日志级别 -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="com.alibaba.nacos.client.naming" level="INFO"/>

    <!-- 配置日志级别 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="LOG_FILE" />
        <appender-ref ref="ERROR_FILE" />
    </root>
</configuration>
